{
  "name": "community",
  "version": "0.1.0",
  "private": true,
  "description": "community scripts",
  "scripts": {
    "report": "node ./src/generate-report.js",
    "lint": "eslint **/*.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "git+kpmgfr@vs-ssh.visualstudio.com:v3/kpmgfr/Plateforme%20Technologique/community"
  },
  "author": "ITS KPMG",
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "dependencies": {
    "docxtemplater": "^3.29.0",
    "dotenv": "^16.0.0",
    "pizzip": "^3.1.1",
    "simple-git": "^3.2.6"
  },
  "type": "module",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.5.1"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "import/prefer-default-export": "off",
      "import/extensions": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.spec.js",
      "lib/**/*.js",
      "!lib/**/*.spec.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.js"
    ],
    "transform": {},
    "coverageProvider": "v8"
  }
}
